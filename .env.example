# DigitalOcean PostgreSQL 연결 정보
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database?sslmode=require

# 카카오 OAuth 설정
KAKAO_REST_API_KEY=your_kakao_rest_api_key
KAKAO_REDIRECT_URI=your_kakao_redirect_uri

# JWT 보안키
JWT_SECRET=your-super-secret-jwt-key-change-in-production-2024

# 결제 시스템 설정
SIGNUP_BONUS_AMOUNT=10000
DEPOSIT_EXPIRY_HOURS=1
DEFAULT_BANK_NAME=국민은행
DEFAULT_ACCOUNT_NUMBER=12345678901234

# SMS 파싱 설정
SMS_PARSING_ENABLED=true

# 레이트 리미팅 설정
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEPOSIT_GENERATE=1/minute
RATE_LIMIT_REFUND_REQUEST=3/hour
RATE_LIMIT_BALANCE_DEDUCT=10/minute

# 환불 시스템 설정
REFUND_PARTIAL_ENABLED=true
REFUND_MINIMUM_AMOUNT=1000
REFUND_MAXIMUM_DAYS=30

# 로그 최적화 설정
LOG_CLEANUP_ENABLED=true
RATE_LIMIT_LOG_RETENTION_HOURS=24
UNMATCHED_DEPOSIT_RETENTION_DAYS=180
CLEANUP_SCHEDULE_HOURS=1

# OpenAI API (후기 검증용)
OPENAI_API_KEY=your_openai_api_key
REVIEW_VALIDATION_ENABLED=true
REVIEW_VALIDATION_MODEL=gpt-3.5-turbo
REVIEW_VALIDATION_MAX_TOKENS=150

# RAG 서비스 (선택사항)
RAG_SERVICE_URL=http://localhost:8003

